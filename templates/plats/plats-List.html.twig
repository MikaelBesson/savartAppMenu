{% extends 'base.html.twig' %}

{% block title %}Hello Boss{% endblock %}

{% block body %}
    <h1>Liste des plats</h1>
    <div>
        <label for="category-chooser">Filtrer par cat√©gorie</label>
        <select name="category" id="category-chooser">
            <option value="no-filter"></option>
            {% for category in categories %}
                <option value="{{ category.name }}">{{ category.name }}</option>
            {% endfor %}
        </select>
    </div>
    <a class="add_button" href="{{ path('admin_plat_add') }}">Ajouter</a>

    <table class="table_box">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Visible</th>
            <th>Image</th>
            <th>Categorie</th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for plat in plats %}
            <tr>
                <td>{{ plat.id }}</td>
                <td>{{ plat.name }}</td>
                <td>{{ plat.isActive == 1 ? 'Oui':'NON'}}</td>
                <td>
                    <img src="{{ plat.image }}" alt="{{ plat.name }}">
                </td>
                <td>{{ plat.category }}</td>

                <th class="edit_button">
                    <a href="{{ path('admin_plat_edit', {id: plat.id}) }}">Editer</a>
                </th>

                <th class="delete_button">
                    <a href="{{ path('admin_plat_delete', {id: plat.id}) }}">Supprimer</a>
                </th>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('adminCategoryFilter') }}
{% endblock %}
